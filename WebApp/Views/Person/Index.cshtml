@{
    ViewBag.Title = "Person";
}

<div class="alert alert-success">
    <h2>Person</h2>
</div>

<div ng-controller="PersonController">
    <div ng-show="frmShow">
        <form name="formCrudPerson" novalidate>
            <button class="btn btn-primary btn-info" ng-click="btnSave()" ng-disabled="formCrudPerson.$invalid">Save</button>
            <button class="btn btn-primary btn-info" ng-click="btnSearch()">Search</button>
            <div class="form-group">
                <label>Name</label>
                <input type="text" id="frmName" name="frmName" class="form-control" placeholder="Name" ng-model="person.namePerson" required>
                <p ng-show="formCrudPerson.frmName.$invalid && formCrudPerson.frmName.$touched" class="help-block">name is required.</p>
            </div>

        </form>
    </div>

    <div ng-show="lstShow">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-8">
                <button class="btn btn-primary btn-success" ng-click="btnForm()">Create</button>
            </div><!-- /.col-lg-6 -->
            <div class="col-xs-6 col-md-4">
                <div class="input-group container-fluid">
                    <input type="text" class="form-control" placeholder="Filter for name..." name="prodFilter" ng-model="prodFilter">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" ng-click="btnFilter()"><span class="glyphicon glyphicon-filter" aria-hidden="true"></span>Filter</button>
                    </span>
                </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->

        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tr ng-repeat="pers in listPers">
                <td>{{ pers.Id }}</td>
                <td>{{ pers.namePerson }}</td>
                <td>
                    <span class="buttons btn-group-xs">
                        <button class="btn btn-primary btn-info" ng-click="btnEdit(pers.Id)">Edit</button>
                        <button class="btn btn-primary btn-danger " ng-click="btnErase(pers.Id)">Erase</button>
                    </span>
                </td>
            </tr>
        </table>
    </div>

</div>